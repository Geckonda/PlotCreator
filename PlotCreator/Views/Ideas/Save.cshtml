@model PlotCreator.Domain.ViewModels.IdeaViewModel

@{
    var textTitle = Model?.Id == 0 ? "Добавление идеи" : "Изменение идеи";
    ViewBag.Title = textTitle;
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="col-md-12 d-flex justify-content-center">
    <div class="card-body">
        <div class="card card-outline-secondary">
            <div class="card-body body-frame">
                <h3 class="mb-0 text-center ParagraphHome">@textTitle</h3>
                @if (Model!.Books?.Count > 0 && Model!.Books?.First() != null)
                {
                    <h3 class="mb-0 text-center ParagraphHome">«@Model!.Books?.First().Title»</h3>
                }
                <form asp-action="Save" enctype="multipart/form-data">
                    <input asp-for="Id" type="text"  value="@Model?.Id" hidden />
                    <input asp-for="User!.Id" type="text" value="@Model?.User!.Id" hidden />
                    <input name="bookId" type="number" value="@ViewData["bookId"]" hidden />
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Topic">Название</label>
                        <input asp-for="Topic" class="form-control" type="text" value="@Model?.Topic" required>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Content">Содержание</label>
                        <textarea asp-for="Content" class="form-control" rows="15">@Model?.Content</textarea>
                    </div>
                    <div class="w-100 d-flex justify-content-center">
                        <button class="btn btn-success" type="submit">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>