@model PlotCreator.Domain.ViewModels.IdeaViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class=" right" style="text-align: right; margin-bottom:10px;">
        <a class="btn btn-success" asp-controller="Ideas" asp-action="Save" asp-route-id="@Model.Id" asp-route-userId="@Model.UserId" >Изменить</a>
        <a class="btn btn-danger" asp-controller="Ideas" asp-action="Delete" asp-route-id="@Model.Id" style="margin-left:10px;">Удалить</a>
</div>
<div style="padding: 10px;"></div>
    <div class="cont-cont">
    <h2>@Model.Topic</h2>
<hr class="dropdown-divider w-100 mb-3">
    <p class="fs-3">@Model.Content</p>
 </div>
