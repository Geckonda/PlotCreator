@model List<PlotCreator.Domain.ViewModels.IdeaViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h1>Мои идеи</h1>
<div style="padding: 10px;"></div>
<div style="width: max-content;padding:2px 4px;  background-color:forestgreen; border-radius: 4px;">
    <a style="text-decoration:none;color:white;" asp-area="" asp-action="Save" asp-route-id="0" asp-route-userId=@User.FindFirst("userId")!.Value>Добавить идею</a>
</div>
<div class="cont-cont">
	@if (!Model.Any())
	{
		<h2 class="text-info">Идей не найдено!</h2>
	}
    @foreach (var idea in Model)
    {
        <a class="SceneContainer" asp-controller="Ideas" asp-action="MyIdea" asp-route-id="@idea.Id">
            <div style="width:5px;height:5px;border-radius:50%;background-color:#3a4675d4;text-align:center;"> </div>
            <h4>@idea.Topic</h4>
            <p>@idea.Content</p>
        </a>
    }
</div>
