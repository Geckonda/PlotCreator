@model List<PlotCreator.Domain.Entity.Idea>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<style>
    .cont-cont {
    }

    .SceneContainer {
        padding: 5px 10px;
        width: auto;
        background-color: white;
        display: flex;
        margin-bottom: 5px;
        text-decoration: none;
        align-items: center;
    }

    p {
        margin: auto;
        margin-left: 15px;
        color: #3a4675d4;
    }
</style>
<h1>Сцены с персонажем</h1>
<div style="padding: 10px;"></div>
<div style="width: max-content;padding:2px 4px;  background-color:forestgreen; border-radius: 4px;">
    <a style="text-decoration:none;color:white;" asp-area="" asp-action="Save" asp-route-id="0" asp-route-userId=@Model[0].UserId>Добавить идею</a>
</div>
<div class="cont-cont">
    @foreach (var idea in Model)
    {
        <a class="SceneContainer" asp-controller="Ideas" asp-action="MyIdea" asp-route-id="@idea.Id">
            <div style="width:5px;height:5px;border-radius:50%;background-color:#3a4675d4;text-align:center;"> </div>
            <h4>@idea.Topic</h4>
            <p>@idea.Content</p>
        </a>
    }
</div>
